<Tab fx:id="liveTab" text="Diagrama Temporal" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="br.eti.hussamaismail.scheduler.controller.GeneratorController">
  <content>
    <SplitPane fx:id="liveView" orientation="VERTICAL">
      <items>
        <AnchorPane>
          <children>
            <!--                     	<Label text="DIAGRAMA TEMPORAL"/> -->
            <Pane fx:id="chartPanel" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <GridPane fx:id="simulateControl" alignment="BASELINE_RIGHT" hgap="5.0" vgap="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0">
              <children>
                <Label style=" -fx-text-fill: #e1fdff; -fx-font-weight: bold;" text="%technique" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ChoiceBox fx:id="techniqueChoiceBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <CheckBox fx:id="preemptiveCheckBox" prefWidth="200.0" style=" -fx-text-fill: #e1fdff; -fx-font-weight: bold;" text="PreemptÃ­vel" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Button alignment="CENTER" cancelButton="false" contentDisplay="CENTER" defaultButton="false" mnemonicParsing="false" onMouseClicked="#simulate" prefHeight="48.0" prefWidth="130.0" style="-fx-background-color : #88BD38" text="%simulate" textAlignment="LEFT" textFill="#5d6c50" GridPane.columnIndex="1" GridPane.rowIndex="2">
                  <font>
                    <Font size="13.0" />
                  </font>
                </Button>
              </children>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
            <VBox spacing="5.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0">
              <children>
                <Label onMouseClicked="#addTask" style="-fx-text-fill: #e1fdff; -fx-font-weight: bold;" text="Adicionar Tarefa">
                  <graphic>
                    <Circle fill="#22bad9" radius="6.0" />
                  </graphic>
                </Label>
              </children>
            </VBox>
          </children>
        </AnchorPane>
        <TableView fx:id="tasksTable" editable="true" maxHeight="200.0" minHeight="200.0" prefHeight="200.0">
          <columns>
            <TableColumn editable="true" minWidth="100.0" prefWidth="100.0" text="%name" fx:id="taskNameColumn">
              <cellValueFactory>
                <PropertyValueFactory property="name" />
              </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="100.0" prefWidth="100.0" text="%type" fx:id="taskTypeColumn">
              <cellValueFactory>
                <PropertyValueFactory property="type" />
              </cellValueFactory>
              <!--                             <cellFactory><FormatedTableCellFactory alignment="center"/></cellFactory> -->
            </TableColumn>
            <TableColumn editable="true" minWidth="200.0" prefWidth="200.0" text="%computationTime" fx:id="taskComputationTimeColumn">
              <cellValueFactory>
                <PropertyValueFactory property="computationTime" />
              </cellValueFactory>
              <!--                             <cellFactory><FormatedTableCellFactory alignment="center"/></cellFactory> -->
            </TableColumn>
            <TableColumn minWidth="100.0" prefWidth="100.0" text="%period" fx:id="taskPeriodColumn">
              <cellValueFactory>
                <PropertyValueFactory property="period" />
              </cellValueFactory>
              <!--                             <cellFactory> -->
              <!--                                 <FormatedTableCellFactory alignment="CENTER" >  -->
              <!--                                     <format><NumberFormat fx:factory="getCurrencyInstance" maximumFractionDigits="0"/></format> -->
              <!--                                 </FormatedTableCellFactory> -->
              <!--                             </cellFactory> -->
            </TableColumn>
            <TableColumn minWidth="100.0" prefWidth="100.0" text="%deadline" fx:id="taskDeadlineColumn">
              <cellValueFactory>
                <PropertyValueFactory property="deadline" />
              </cellValueFactory>
              <!--                             <cellFactory><FormatedTableCellFactory alignment="center"/></cellFactory> -->
            </TableColumn>
            <TableColumn minWidth="100.0" prefWidth="100.0" text="%activation" fx:id="taskActivationTimeColumn">
              <cellValueFactory>
                <PropertyValueFactory property="activationTime" />
              </cellValueFactory>
              <!--                             <cellFactory><FormatedTableCellFactory alignment="center"/></cellFactory> -->
            </TableColumn>
          </columns>
        </TableView>
      </items>
    </SplitPane>
  </content>
</Tab>
